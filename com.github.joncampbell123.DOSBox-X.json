{
    "app-id": "com.github.joncampbell123.DOSBox-X",
    "branch": "0.82.18",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio",
	"--persist=.",
	"--persist=.dosbox"
    ],
    "command": "dosbox-x",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
	    "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "LibPCap",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.tcpdump.org/release/libpcap-1.9.0.tar.gz",
                    "sha256": "2edb88808e5913fdaa8e9c1fcaf272e19b2485338742b5074b9fe44d68f37019"
                }
             ]
        },
	    {
	        "name": "SDL1",
	        "buildsystem": "autotools",
	        "config-opts": [ "--enable-static", "--disable-shared", "--disable-x11-shared", "--disable-video-x11-xrandr", "--disable-video-x11-vm", "--disable-video-x11-xv" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/joncampbell123/dosbox-x/archive/dosbox-x-v0.82.16.tar.gz",
                    "sha256": "48ed04d08b4fd8cd8d388048280c4d98f9f202ea996d4b14c340e68693406c77"
                }
	        ],
            "subdir": "vs2015/sdl" 
	    },
	    {
            "name": "SDLNET",
	        "buildsystem": "autotools",
	        "config-opts": [ "--enable-static", "--disable-shared" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/joncampbell123/dosbox-x/archive/dosbox-x-v0.82.16.tar.gz",
                    "sha256": "48ed04d08b4fd8cd8d388048280c4d98f9f202ea996d4b14c340e68693406c77"
                }
             ],
             "subdir": "vs2015/sdlnet"
	    },
        {
            "name": "dosbox-x",
            "buildsystem": "autotools",
            "config-opts": [ "--enable-sdl", "--disable-sdl2", "--disable-debug", "--enable-core-inline", "--enable-avcodec" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/joncampbell123/dosbox-x/archive/dosbox-x-v0.82.18.tar.gz",
                    "sha256": "2978f69f8f69c628cbd1c82df2e2a7d78868f22ce96db63a441fd55c0e451d91"
                },
                {
                    "type": "file",
                    "path": "com.github.joncampbell123.DOSBox-X.png"
                },
                {
                    "type": "file",
                    "path": "com.github.joncampbell123.DOSBox-X.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.github.joncampbell123.DOSBox-X.desktop"
                }
            ],
            "post-install": [
                "install -Dm644 com.github.joncampbell123.DOSBox-X.appdata.xml /app/share/appdata/com.github.joncampbell123.DOSBox-X.appdata.xml",
                "install -Dm644 com.github.joncampbell123.DOSBox-X.desktop /app/share/applications/com.github.joncampbell123.DOSBox-X.desktop",
                "install -Dm644 com.github.joncampbell123.DOSBox-X.png /app/share/icons/hicolor/256x256/apps/com.github.joncampbell123.DOSBox-X.png"
            ]
        }
    ]
}
